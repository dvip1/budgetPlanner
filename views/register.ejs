<%- include('partials/header') %>
    <section class="my-container text-center">
        <div class="form">
            <main class="form-signin ">
                <form method="post" action="/register">
                    <h1 class="h3 mb-3 fw-normal">Register</h1>
                    <hr>
                    <div class="form-floating">
                        <input name="budget" type="number" class="form-control" id="floatingPassword"
                            placeholder="Monthly Budget" required min="1">
                        <label for="floatingPassword">Budget</label>
                    </div>
                    <div class="form-floating">
                        <input name="date" type="number" class="form-control" id="floatingPassword" placeholder="Day"
                            required min="1" max="30">
                        <label for="floatingPassword">Pay Day</label>
                        
                    </div>
                    <div class="form-floating">
                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"
                            autocomplete="email" required name="email">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating">
                        <input name="password" type="password" class="form-control" id="floatingPassword"
                            placeholder="Password" required>
                        <label for="floatingPassword">Password</label>
                    </div>

                    <button class="w-100 btn btn-lg btn-secondary" type="submit">
                        submit
                    </button>
                </form>
            </main>
        </div>
    </section>
    <%- include('partials/footer') %>