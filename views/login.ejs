<%- include('partials/header') %>
    <section class="my-container text-center">

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row main-content bg-success text-center">
                <div class="col-md-4 text-center company__info">
                    <span class="company__logo"><i class="fa-brands fa-bitcoin  "></i></span></h2></span>
                    <h4 class="company_title">Budget Planner</h4>
                </div>
                <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                    <div class="container-fluid">
                        <div class="row">
                            <h2>Log In</h2>
                        </div>
                        <div class="row">
                            <form control="" class="form-group " method="post" action="/login" >
                                <div class="row">
                                    <input type="email" name="email" id="email" class="form__input" placeholder="Email">
                                </div>
                                <div class="row">
                                    <!-- <span class="fa fa-lock"></span> -->
                                    <input type="password" name="password" id="password" class="form__input"
                                        placeholder="Password">
                                </div>

                                <div class="row submit">
                                    <input type="submit" value="Submit" class="btn btn-outline-success" style="width:12rem">
                                </div>
                            </form>
                        </div>
                        <div class="row">
                            <p>Don't have an account? <a href="/register">Register Here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>
    <%- include('partials/footer') %>